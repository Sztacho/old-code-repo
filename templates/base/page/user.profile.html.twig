{% extends "base/page/user.html.twig" %}

{% block content %}
    <div class="card bg-mngame">
        <div class="card-header">
            <h4 class="font-weight-bold">PodglÄ…d profilu</h4>
        </div>
        <div class="card-body container-fluid">
            <div class="row">
                <div class="col-9">
                    <div class="form-group">
                        <label class="w-75" for="username">{% trans %}Username{% endtrans %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <span class="text-danger">ADMINISTRATOR</span>
                            {% else %}
                                <span class="text-info">GRACZ</span>
                            {% endif %}
                        </label>
                        <input id="username" type="text" class="form-control" value="{{ app.user.username }}" disabled/>
                    </div>
                    <div class="form-group">
                        <label class="w-75" for="email">Email</label>
                        <input id="email" type="text" class="form-control" value="{{ app.user.email }}" disabled/>
                    </div>
                </div>
                <div class="col-3">
                    <div class="user-avatar w-100">
                        <img id="avatar" class=" w-100" alt="{{ app.user.username }}"
                             src="https://cravatar.eu/avatar/{{ app.user.username }}.png">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
